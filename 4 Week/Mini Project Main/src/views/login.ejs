<% if (errorMessage) { %>
    <div class="alert alert-danger p-4 my-4" role="alert">
        <%= errorMessage %>
    </div>
    <% } %>
        <div class="container d-flex justify-content-between align-items-center vh-100 ">
            <div class="row w-100 ">
                <div class="col-md-6 d-flex flex-column justify-content-center">
                    <form action="/login" method="post" class="bg-white p-4 shadow-lg w-75 rounded-lg text-black">
                        <h2 class="mt-5 mb-4 text-center colorOne">Log In Into Your Account</h3>
                            <div class="text-center ">
                                <img class="mx-auto shadowImg" height="80"
                                    src="https://cdn-icons-png.flaticon.com/512/9187/9187604.png" alt="Your Company">
                            </div>
                            <div class="mb-3">
                                <label for="email" class="form-label">Email address</label>
                                <input type="email" class="form-control" id="email" name="email" required>
                            </div>
                            <div class="mb-3">
                                <label for="password" class="form-label">Password</label>
                                <input type="password" class="form-control" id="password" name="password" required>
                            </div>
                            <button type="submit" class="btn bgGradient text-light w-100">Login</button>
                    </form>
                </div>
                <div class="col-md-6 d-flex flex-column justify-content-center align-items-center shadowImg">
                    <img height="300" src="./assets/Login.png" class="img-fluid" alt="Login Image">
                </div>
            </div>
        </div>